<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'newbook', book: @book_new %>
    </div>
    <div class="col-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-striped">
      <tbody>
        <tr>
        <td><%= image_tag @user.get_profile_image(60, 60), size: "100x100" %><br>
          <%= link_to @book.user.name, user_path(@book.user) %></td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
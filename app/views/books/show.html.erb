

<div>
  <h1>Book detail</h1>
  <%= image_tag @book.get_image %>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", book_path(@book), method: :update %>
  <% end %>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
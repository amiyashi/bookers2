<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>UserInfo</h2>
      <h3 class="profile-name"><%= @user.name %></h3>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

      <div class="profile-edit">
      <table class="user-info">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(current_user), class: 'btn btn-default' do %>
          <i class="glyphicon glyphicon-wrench"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <!--投稿の詳細-->
    <div class="col-xs-9">
    <h1>Book detail</h1>
      <table class="table" >
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
          <%= link_to @book.user.name, user_path(@book.user) %></td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    <div class="col-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
          <tr>
	  	      <td><%= image_tag user.get_profile_image(60, 60), size: "80x80" %></td>
	  	      <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", user_path(user.id) %></td>
	  	    </tr>
  	  	  <% end %>
  	   </tbody>
  	  </table>
    </div>
  </div>
</div>
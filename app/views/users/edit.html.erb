<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <div id="error_explanation">
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="field-with-errors">
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= image_tag post_image.user.get_profile_image(100,100) %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User",class: "btn btn-default" %>
      </div>
        <% end %>
    </div>
  </div>
</div>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>
<%= form_with model: @user do |f| %>
  
  <label>Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <!--<span class="fa fa-user form-control-icon" aria-hidden="true"></span>-->
 
  <label for="user_profile_image">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form", accept: "image/*" %>
  
  <label>Introduction</label>
  <%= f.text_area :introduction, autofocus: true %>
  <!--<span class="fa fa-user form-control-icon" aria-hidden="true"></span>-->
  
  <%= f.submit "Update User",class: "btn btn-default" %>
<% end %>
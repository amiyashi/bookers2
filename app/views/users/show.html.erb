<div class="container px-5 px-sm-0">
  <div class= "row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @user %>
      <%= render 'books/newbook', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
            <tr>
		      	  <td>
		      	    <%= link_to user_path(@user) do %>
		      	      <%= image_tag @user.get_profile_image(60, 60) %>
		      	    <% end %>
		      	  </td>
		          <td><%= link_to book.title, book_path(book.id) %></td>
		          <td><%= book.body %></td>
		        </tr>
		      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>